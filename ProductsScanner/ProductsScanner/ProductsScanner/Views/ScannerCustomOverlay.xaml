<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProductsScanner.Views.ScannerCustomOverlay">
    <ContentView.Content>
        <StackLayout>
            <Button 
                x:Name="btnToggleTorch"
                BackgroundColor="Transparent"
                Padding="10,10,10,10" 
                Image="torchOff.png"
                HorizontalOptions="EndAndExpand">
            </Button>

            <Image Source="scannerFrame.png" Margin="10,10,10,10"></Image>
        </StackLayout>
    </ContentView.Content>
</ContentView>